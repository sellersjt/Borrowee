@model Borrowee.Models.TransactionModels.TransactionDetail

@{
    ViewBag.Title = "Delete Transaction";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>@ViewBag.Title.</h2>
            <h4 class="text-warning">Are you sure you want to delete this transaction?</h4>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Item)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Item.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Borrower)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Borrower.FirstName)
                    @Html.DisplayFor(model => model.Borrower.LastName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.LentOutDateUtc)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LentOutDateUtc)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ReturnDateUtc)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ReturnDateUtc)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsReturned)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IsReturned)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            @if (Model.ItemImage != null)
            {
                <br><img src="@(Url.Content(Constants.ItemImagePath) + @Html.DisplayFor(model => model.ItemImage.FileName))" class="rounded-jt" />
            }
        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>