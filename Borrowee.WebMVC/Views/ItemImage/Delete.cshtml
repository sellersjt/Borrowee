@model Borrowee.Models.ItemImageModels.ItemImageDetail

@{
    ViewBag.Title = "Delete Item Image";
}

<h2>@ViewBag.Title</h2>

<h3 class="text-warning">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)
        </dd>

        <dt>
            Image
        </dt>

        <dd>
            <img src="@(Url.Content(Constants.ItemImagePath) + @Html.DisplayFor(model => model.FileName))" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
