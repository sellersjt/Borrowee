@model Borrowee.Models.ItemImageModels.ItemImageDetail

@{
    ViewBag.Title = "Delete Item Image";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>@ViewBag.Title.</h2>
            <h4 class="text-warning">Are you sure you want to delete this image?</h4>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FileName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FileName)
            </dd>
            <dt>
                Image
            </dt>
            <dd>
                <img src="@(Url.Content(Constants.ItemImagePath) + @Html.DisplayFor(model => model.FileName))" />
            </dd>
        </dl>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.FileName)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>